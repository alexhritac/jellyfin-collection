# =============================================================================
# JELLYFIN COLLECTION - CONFIGURATION
# =============================================================================
# Copier ce fichier vers .env et remplir les valeurs

# -----------------------------------------------------------------------------
# JELLYFIN
# -----------------------------------------------------------------------------
JELLYFIN_URL=http://localhost:8096
JELLYFIN_API_KEY=your_jellyfin_api_key

# -----------------------------------------------------------------------------
# TMDB (The Movie Database)
# -----------------------------------------------------------------------------
TMDB_API_KEY=your_tmdb_api_key
TMDB_LANGUAGE=fr
TMDB_REGION=FR

# -----------------------------------------------------------------------------
# TRAKT
# -----------------------------------------------------------------------------
TRAKT_CLIENT_ID=your_trakt_client_id
TRAKT_CLIENT_SECRET=your_trakt_client_secret
# Ces tokens sont générés automatiquement après l'auth OAuth
TRAKT_ACCESS_TOKEN=
TRAKT_REFRESH_TOKEN=

# -----------------------------------------------------------------------------
# MDBLIST (optionnel)
# -----------------------------------------------------------------------------
MDBLIST_API_KEY=

# -----------------------------------------------------------------------------
# OPENAI (Poster Generation)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key
OPENAI_ENABLED=false
# Include show titles in visual signatures for better context
OPENAI_EXPLICIT_REFS=false
# Rétention historique des posters générés (0=illimité)
OPENAI_POSTER_HISTORY_LIMIT=5
# Rétention historique des fichiers JSON de prompts (0=illimité)
OPENAI_PROMPT_HISTORY_LIMIT=10

# -----------------------------------------------------------------------------
# RADARR (Films)
# -----------------------------------------------------------------------------
RADARR_URL=http://localhost:7878
RADARR_API_KEY=your_radarr_api_key
RADARR_ROOT_FOLDER=/movies
RADARR_QUALITY_PROFILE=HD-1080p
RADARR_DEFAULT_TAG=jfc

# -----------------------------------------------------------------------------
# SONARR (Séries)
# -----------------------------------------------------------------------------
SONARR_URL=http://localhost:8989
SONARR_API_KEY=your_sonarr_api_key
SONARR_ROOT_FOLDER=/tv
SONARR_QUALITY_PROFILE=HD-1080p
SONARR_DEFAULT_TAG=jfc

# -----------------------------------------------------------------------------
# DISCORD WEBHOOKS
# -----------------------------------------------------------------------------
DISCORD_WEBHOOK_URL=
# Webhooks spécifiques (optionnel, utilise DISCORD_WEBHOOK_URL par défaut)
DISCORD_WEBHOOK_ERROR=
DISCORD_WEBHOOK_RUN_START=
DISCORD_WEBHOOK_RUN_END=
DISCORD_WEBHOOK_CHANGES=

# -----------------------------------------------------------------------------
# SCHEDULER
# -----------------------------------------------------------------------------
# Format cron: minute hour day_of_month month day_of_week
# Exemples:
#   "0 3 * * *"   = tous les jours à 3h00
#   "0 4 1 * *"   = le 1er de chaque mois à 4h00
#   "0 */6 * * *" = toutes les 6 heures

# Sync quotidien des collections (default: tous les jours à 3h00)
SCHEDULER_COLLECTIONS_CRON=0 3 * * *

# Régénération des posters (default: 1er du mois à 4h00, vide=désactivé)
SCHEDULER_POSTERS_CRON=0 4 1 * *

# Lancer un sync immédiatement au démarrage du scheduler
SCHEDULER_RUN_ON_START=true

# Fuseau horaire pour les expressions cron
SCHEDULER_TIMEZONE=Europe/Paris

# -----------------------------------------------------------------------------
# APPLICATION - Chemins (séparation config/data/logs)
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
CONFIG_PATH=/config
DATA_PATH=/data
LOG_PATH=/logs
DATABASE_URL=sqlite+aiosqlite:///data/jfc.db

# Mode dry-run (ne fait aucune modification)
DRY_RUN=false
